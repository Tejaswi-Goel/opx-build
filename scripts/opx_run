image_tag="${OPX_DIST-latest}"

interactive="-i"
if [ -t 1 ]; then
    # STDOUT is attached to TTY
    interactive="-it"
fi

read -d '' opx_docker_command <<- EOF
docker run \
    --rm \
    --privileged \
    -e LOCAL_UID=$(id -u ${USER}) \
    -e LOCAL_GID=$(id -g ${USER}) \
    -v ${PWD}:/mnt \
    ${interactive} \
    opxhub/build:$image_tag
EOF

if [[ $# -gt 0 ]]; then
    # run command directly
    $opx_docker_command sh -c "$*"
else
    # launch interactive shell
    $opx_docker_command
fi
